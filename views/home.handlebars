<header>
  <div class="navbar-menu">

    <div class="navbar-start">
      <a href="/" class="title is-1">Blogmire</a>
    </div>

    {{#if logged_in}}
    <p class="subtitle is-3">Welcome {{username}}</p>

    <div class="navbar-end">
      <div class="buttons">
          <a id="logout" class="button is-primary">
            <strong>Logout</strong>
          </a>
        </div>
    </div>
    {{else}}
    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <a class="button is-primary" href="/signup">
            <strong>Sign up</strong>
          </a>
          <a class="button is-light" href="/login">
            Log in
          </a>
        </div>
      </div>
    </div>
    {{/if}}

  </div>
</header>

<div class="container">
{{#if logged_in}}
  
{{else}}
  <h2 class="subtitle is-2 has-text-centered">Log in to see the latest posts on Blogmire</h2>
{{/if}}
</div>

<script src="/js/logout.js"></script>