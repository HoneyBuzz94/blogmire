<header class="box">
  <div class="navbar-menu">

    <div class="navbar-start">
      <a href="/" class="title is-1">Blogmire</a>
    </div>

    <div class="navbar-end">
      <div class="buttons">
        <form action="/api/users/logout" method="POST">
          <button type="submit" class="button is-light">
              <strong>Logout</strong>
          </button>
        </form>
      </div>
    </div>

  </div>
</header>

<div class="container box">
  <h2 class="subtitle is-2">Create new post</h2>
  <form action="/api/posts" method="POST">
    <div class="field">
      <div class="control">
        <input
          id="title"
          name="title"
          class="input"
          type="text"
          placeholder="Title"
        />
      </div>
    </div>

    <div class="field">
      <div class="control">
        <textarea
          id="text"
          name="text"
          class="textarea"
          placeholder="Textarea"
        ></textarea>
      </div>
    </div>

    {{! Hidden input }}
    <input id="user_id" type="hidden" name="user_id" value={{user_id}} />

    <div class="container">
      <div class="control">
        <button type="submit" class="button is-link">Submit</button>
      </div>
    </div>
  </form>
</div>